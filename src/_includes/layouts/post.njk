---
layout: layouts/layout.njk
---
{% set previousPost = collections.posts | sameLang | getPreviousCollectionItem %}
{% set nextPost = collections.posts | sameLang | getNextCollectionItem %}

<article-box>
    <h1>
        <span class="title">{{ title }}</span>
    </h1>
    {% if date %}
        <div class="date-created">{{ date | dateFilter }}</div>
    {% endif %}
    {% if thumb %}
        {% image caption, thumb, media %}
    {% endif %}
    {{ content | safe }}
</article-box>

<ul class="posts">
    {% if previousPost %}
    <a href="{{ previousPost.url }}">
        <article-box>
            <img src="/media/{{ previousPost.data.media }}/thumbnail.webp" alt="{{ previousPost.data.title }}" loading="lazy">
            <h2>
                <span class="caption">{{ "previousPost" | i18n(lang) }}</span>
                <span class="title">{{ previousPost.data.title }}</span>
            </h2>
        </article-box>
    </a>

    {% endif %}

    {% if nextPost %}
    <a href="{{ nextPost.url }}">
        <article-box>
            <img src="/media/{{ nextPost.data.media }}/thumbnail.webp" alt="{{ nextPost.data.title }}" loading="lazy">
            <h2>
                <span class="caption">{{ "nextPost" | i18n(lang) }}</span>
                <span class="title">{{ nextPost.data.title }}</span>
            </h2>
        </article-box>
    </a>
    {% endif %}
</div>