    <meta charset="UTF-8">
    <meta name="description" content="My personal cycling journey">
    <meta name="keywords" content="cycling, bikepacking, bike, road">
    <meta name="author" content="Patrycja Fogelman">
    <meta name="viewport" content="width=device-width">
    <meta name="generator" content="Eleventy">
    {% if title %}
    <meta property='og:title' content='Cycling Stories - {{ title }}'/>
    <meta property='og:image' content='{{ metadata.url }}/images/thumbnails/{{ media }}.png'/>
    <meta property='og:url' content='{{ metadata.url }}/{{ lang }}/{{ title | slug }}'/>
    {%  else %}
    <meta property='og:title' content='Cycling Stories'/>
    <meta property='og:image' content='{{ metadata.url }}/images/thumbnails/index.png'/>
    <meta property='og:description' content='{{ "subtitle" | i18n(lang) }}'/>
    <meta property='og:url' content='{{ metadata.url }}{% if lang === "pl" %}/{{ lang }}{% endif %}'/>
    {%  endif %}
    <meta property='og:image:width' content='1200' />
    <meta property='og:image:height' content='630' />
    <meta property="og:type" content="website" />
    <title>{{ "title" | i18n(lang) }}</title>
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}"/>
    {% if stylesheet %}
        <link rel="stylesheet" href="{{ '/css/content/' + stylesheet + '.css' | url}}"/>
    {% endif %}
    <script type="text/javascript">
        if ('paintWorklet' in CSS){
            CSS.paintWorklet.addModule("/js/gradientee-worklet.min.js");
        }
    </script>
    <script type="text/javascript" src="/js/gradientee.min.js"></script>
</head>
<body>
