<div class="socials">
    {% if switch %}
        <div class="language-switch">
            <a href="{{ switch }}">{{ lang }}</a>
        </div>
    {% endif %}
    <div class="switch-container">
        <div class="switch off init">
            <svg viewBox="0 0 200 40" class="background">
                <use href="#bg" class="background-shades" />
                <use href="#stars" class="stars" />
                <g class="clouds">
                    <use href="#cloud-outer" class="cloud-outer" />
                    <use href="#cloud-inner" class="cloud-inner" />
                </g>
            </svg>
            <div class="handle">
                <svg viewBox="0 0 20 20" width="2.5em" height="2.5em" class="craters">
                    <circle r="3.5" cx="7" cy="12" />
                    <circle r="2.5" cx="11" cy="5" />
                    <circle r="2" cx="14.5" cy="12" />
                </svg>
            </div>
            <span class="shadow-container"></span>
        </div>
    </div>
    <a class="instagram" href="https://www.instagram.com/cycling.pati" target="_blank" title="Instagram">
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <use href="#ig"/>
        </svg>
    </a>
    <a class="strava" href="https://www.strava.com/athletes/cycling-pati" target="_blank" title="Strava">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="2.4 2.4 11 11">
           <use href="#strava"/>
        </svg>
    </a>
    <a class="avatar" href="{{ "urlAbout" | i18n(lang) }}">
        <img src="/images/av-mini.webp" alt="Patrycja Fogelman avatar" title="About me"/>
    </a>
</div>