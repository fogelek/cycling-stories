---
permalink: "./thumbnails/thumbnail.html"
permalinkBypassOutputDir: true
eleventyExcludeFromCollections: true
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ meta.siteName }}</title>
  {% set css %}
        {% include "thumbnails/style.css" %}
    {% endset %}
    {% set js %}
        {% include "node_modules/gradientee/dist/gradientee.min.js" %}
    {% endset %}
    <script type="text/javascript">
        {{ js | safe }}
    </script>
     <style>
         {{ css | safe }} 
     </style>
</head>
<body>
        <div class="bg-container">
        <canvas></canvas>
    </div>
    <header>
        <a href="/">
            <h1 class="title">{{ metadata.title }}</h1>
            <h2 class="subtitle" data-subtitle>{{ metadata.title }}</h2>
        </a>
    </header>
    <main>
        <span data-thumbnail><img width="440" height="330" src="media/the-sudety-adventure.webp"></span>
    </main>
    <script>
    const canvas = document.querySelector(".bg-container canvas");
      canvas.width = document.documentElement.clientWidth;
      canvas.height = document.documentElement.clientHeight;
      const ctx = canvas.getContext("2d");
      gradientee(ctx, {
        width: canvas.clientWidth,
        height: canvas.clientHeight,
        colorFrom: "#e400a6",
        colorTo: "#3b0099",
        boxSize: 60,
        seed: 3200,
        deflectionLevel: 20,
        colorRandomness: 0,
      });
    </script>
</body>
</html>
